<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <solid
                android:color="#3d3e3f" />
            <stroke
                android:width="1dp"
                android:color="#101112" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#6f92aa"
                android:endColor="#394e5c"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#3b550a" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
