<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
   android:id="@+id/scroll" android:layout_width="fill_parent"
    android:layout_height="fill_parent"  android:background="@drawable/appbg">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   
    android:orientation="vertical"
    android:padding="2dp" >
  
 <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_margin="2px"
        android:background="#ffffff" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listgradient"
        android:paddingLeft="5dp"
        android:text="Select Person to include/exclude"
        android:textColor="#000000"/>

    <MultiAutoCompleteTextView
        android:id="@+id/autocomplete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Type Name or Number"
        android:inputType="text"
        android:singleLine="true" >
    </MultiAutoCompleteTextView>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Include" >
        </RadioButton>

        <RadioButton
            android:id="@+id/exclude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exclude" >
        </RadioButton>
        <RadioButton
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All" >
        </RadioButton>
    </RadioGroup>

    <!--
         <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_margin="2px"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />
    -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_margin="2px"
        android:background="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listgradient"
        android:paddingLeft="5dp"
        android:text="Select Filter Key Words"
       android:textColor="#000000" />

    <EditText
        android:id="@+id/findText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Comma Seperated Key Words"
        android:inputType="text"
        android:singleLine="true" >
    </EditText>

    <!--
         <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_margin="2px"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />
    -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_margin="2px"
        android:background="#ffffff" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listgradient"
        android:paddingLeft="5dp"
        android:text="SMS From ?"
       android:textColor="#000000" />
    <RadioGroup
        android:id="@+id/radiogroupfromtable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/inbod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="inbox" >
        </RadioButton>

        <RadioButton
            android:id="@+id/sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sent" >
        </RadioButton>
        <RadioButton
            android:id="@+id/draft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="draft" >
        </RadioButton>
         <RadioButton
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All" >
        </RadioButton>
    </RadioGroup>

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_margin="2px"
        android:background="#ffffff" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listgradient"
        android:paddingLeft="5dp"
        android:text="SMS Status"
        android:textColor="#000000" />
    <RadioGroup
        android:id="@+id/radiogroupstatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Read" >
        </RadioButton>

        <RadioButton
            android:id="@+id/unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un Read" >
        </RadioButton>
        <RadioButton
            android:id="@+id/allr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All" >
        </RadioButton>
        </RadioGroup>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_margin="2dp"
        android:background="#ffffff" />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="horizontal">
    <Button
        android:id="@+id/showmessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="3dp"
        android:background="@drawable/buttonshape"
        android:text="Show message list"
        android:textColor="#ffffff" >
    </Button>
    
    <Button
        android:id="@+id/markread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="3dp"
        android:background="@drawable/buttonshape"
        android:text="Mark All Read"
        android:textColor="#ffffff" >
    </Button>
</LinearLayout>
</LinearLayout>
</ScrollView>